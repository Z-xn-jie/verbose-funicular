<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="取消"
        android:textColor="#fff"
        android:textSize="18dp" />

    <Button
        android:id="@+id/xiang_ce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相冊"
        app:layout_constraintTop_toBottomOf="@id/texts" />

    <Button
        android:id="@+id/pai_zhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照"
        app:layout_constraintTop_toBottomOf="@id/xiang_ce" />

    <Button
        android:id="@+id/zhi_bo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="錄音"
        app:layout_constraintTop_toBottomOf="@id/pai_zhao" />

    <Button
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WEI"
        app:layout_constraintTop_toBottomOf="@id/zhi_bo" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weixin" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/videoview"
        app:layout_constraintTop_toBottomOf="@id/weixin"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>